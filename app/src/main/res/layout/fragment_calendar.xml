<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="horizontal"
        app:calendarBackgroundColor="@color/trans"
        app:monthTextColor="@color/aqua"
        app:otherDayTextColor="@color/green"
        app:dayTextColor="@color/black"
        app:firstDayOfTheWeek="sunday"
        app:weekDayTitleTextColor="@color/black"
        app:selectionType="single"
        app:selectedDayTextColor="@color/red"
        app:currentDayIconRes="@color/aquamarine"
        app:currentDaySelectedIconRes="@color/blue"
        app:currentDayTextColor="@color/yellow">

    </com.applikeysolutions.cosmocalendar.view.CalendarView>

</FrameLayout>